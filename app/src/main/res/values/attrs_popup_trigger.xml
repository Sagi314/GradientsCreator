<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PopupTrigger">
        <attr name="android:enabled" />

        <attr name="popupWidth" format="dimension" />
        <attr name="popupHeight" format="dimension" />

        <attr name="popupView" format="reference" />
        <attr name="popupLocation" format="flags">
            <flag name="up" value="1" />
            <flag name="down" value="2" />
            <flag name="center_vertical" value="4" />

            <flag name="left" value="8" />
            <flag name="right" value="16" />
            <flag name="center_horizontal" value="32" />
        </attr>
        <attr name="closeOnOutsideClick" format="boolean"/>
        <attr name="closeOnItemClick" format="boolean"/>
        <attr name="disabledAlpha" format="float"/>
    </declare-styleable>

    <declare-styleable name="SbmSpinner">
        <attr name="selectedPosition" format="integer"/>
        <attr name="previewSelectedItem" format="boolean"/>
        <attr name="hideSelectedItem" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SeekBarPopup">
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="textPrefix" format="string"/>
        <attr name="textSuffix" format="string"/>

        <attr name="progress" format="integer"/>
        <attr name="maxProgress" format="integer"/>
    </declare-styleable>

    <declare-styleable name="MultiSelectionSpinner">
        <attr name="closeOnItemClick"/>

        <attr name="okButtonIndex" format="integer"/>
        <attr name="cancelButtonIndex" format="integer"/>
    </declare-styleable>
</resources>